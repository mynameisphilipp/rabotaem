    <script>
        function checkPassword() {
            var password = prompt("Введите пароль:");
            if (password !== 'yourpassword') {
                alert("Неверный пароль. Доступ запрещен.");
                document.body.innerHTML = "<h1>Доступ запрещен</h1>";
            }
        }
    </script>
</head>
<body onload="checkPassword()">

